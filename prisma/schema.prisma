generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  gender       String?
  email        String         @unique
  password     String
  phoneNumber  String?
  role         Role?
  product      Product[]
  announcement Announcement[]
}

enum Role {
  admin
  client
  serviceProvider
  seller
}

model Product {
  id          Int     @id @default(autoincrement())
  category    Category
  description String
  image       String
  userId      Int
  price       Float
  isDispo     Boolean
  user        User    @relation(fields: [userId], references: [id])
}

enum Category {
  food
  accessory
  animal
}

model Announcement {
  id          Int      @id @default(autoincrement())
  type        Service
  animalCible Animal[]
  description String
  city        String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

enum Service {
  veterinaryCare
  petSitter
  petGroomer
  petTrainer
}

enum Animal {
  cat
  dog
  pigeon
  parrot
  bird
  fish
}
